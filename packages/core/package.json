{
  "name": "@node-edit-utils/core",
  "version": "1.2.2",
  "description": "Utilities for editing nodes in a dom tree.",
  "type": "module",
  "main": "dist/markup-canvas.cjs.js",
  "module": "dist/markup-canvas.esm.js",
  "browser": "dist/markup-canvas.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "README.md"
