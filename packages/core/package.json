    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "glob": "^11.0.3",
    "rollup": "^4.52.5",
    "tslib": "^2.8.1",
    "ttypescript": "^1.5.15",
    "typescript": "^5.9.3",
    "typescript-transform-paths": "^3.5.5"
  },
  "repository": {
    "type": "git",
